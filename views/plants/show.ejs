<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= plant.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= plant.common_name %></h5>
              <p class="card-text"><%= plant.scientific_name %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= plant.duration %></li>
              <li class="list-group-item"><%- new Date(plant.date_planted).toLocaleDateString() %></li>
            </ul>
            <div class="card-body">
              <a href="/plants/<%= plant._id%>/edit" class="card-link btn btn-info">Edit Plant</a>
              <form class="d-inline" action="/plants/<%= plant._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
              </form>
            </div>
            <div class="card-footer text-muted">
              <a href="/plants" class="card-link">All Plants</a>
            </div>
          </div>
    </div>
    <div class="col-6">
      <h5 class="text-center">Update Plant Care</h5>
          <form action="/plants/<%= plant._id %>/updates" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="health">Plant Health</label>
              <input class="form-range" type="range" min="1" max="5" name="update[health]" id="health">
            </div>
            <div class="mb-3">
              <label class="form-label" for="body">Care Update</label>
              <textarea class="form-control" name="update[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <button class="btn btn-success">Submit</button>
          </form>
          <% for(let update of plant.updates) { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title"><b>Health:</b> <%= update.health %></h6>
              <p class="card-text"><b>Update:</b> <%= update.body %></p>
              <form action="/plants/<%= plant._id %>/updates/<%= update._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </div>
          </div>
          <% } %>
    </div>
</div>