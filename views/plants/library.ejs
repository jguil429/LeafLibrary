<% layout('layouts/boilerplate')%>

<h1 class="text-center mb-5 text-success">Leaf Library</h1>

<div class="container">
    <div class="row flex">
        <% for (let plant of plants) { %>
            <div class="col-lg-3 col-md-4 col-sm-12 mb-4 text-center">
                <div class="card" style="width: 18rem;">
                    <img src="<%= plant.images ? plant.images[0].library_card : placeholder.library_card %>" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title"><%= plant.common_name %></h5>
                        <a class="btn btn-success" href="/plants/<%= plant._id %>">Plant Details</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
