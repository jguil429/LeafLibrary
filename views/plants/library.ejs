<% layout('layouts/boilerplate')%>
    <h1 class="text-center mb-5">Leaf Library</h1>
   
    <div class="container">
    <% for (let plant of plants) { %>
        <div class="row d-inline-flex align-items-center justify-content-evenly">
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="<%= plant.images[0].url %>" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title"><%= plant.scientific_name %></h5>
                        <a class="btn btn-success" href="/plants/<%= plant._id %>">Plant Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
