<% layout('layouts/boilerplate')%>
    <h1>Leaf Library</h1>
    <div><a href="/plants/new">Add Plant</a></div>
   
        <% for (let plant of plants) {%>
           <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img src="<%= plant.image  %>" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= plant.scientific_name %></h5>
                            <p class="card-text">
                                <small class='text-muted'><%= plant.common_name %></small>
                            </p>
                            <a class="btn btn-success" href="/plants/<%= plant._id %>">View <%= plant.scientific_name %></a>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
