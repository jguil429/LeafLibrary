<% layout('layouts/boilerplate') %>

<h1 class="text-center mb-5">My Plants</h1>

<div class="container">
    <div class="row d-flex">
        <% for (let i = 0; i < plants.length; i++) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-5 text-center">
                <div class="card h-100">
                    <img src="<%= plants[i].images && plants[i].images[0] && plants[i].images[0].library_card ? plants[i].images[0].library_card : placeholder.library_card %>" class="card-img-top" alt="">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= plants[i].common_name %></h5>
                        <div class="mt-auto">
                            <a class="btn btn-success" href="/plants/<%= plants[i]._id %>">Plant Details</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <% for (let i = plants.length; i < 4; i++) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-5 text-center">
                <div class="card h-100">
                    <img src="<%= placeholder.library_card %>" class="card-img-top" alt=""/>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"> Empty Pot </h5>
                        <div class="mt-auto">
                            <a class="btn btn-success" href="/plants/new">Add Plant</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>